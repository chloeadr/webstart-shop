{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<h1>All blog posts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created on</th>
                <th>Published on</th>
                <th>Content</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.creationDate |date('Y-m-d H:i:s')}}</td>
                <td>{{ post.publishedDate |date('Y-m-d')}}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.image }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
